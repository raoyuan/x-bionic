<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/peoplebackground" >
	<RelativeLayout 
    	android:layout_width="match_parent"
    	android:layout_height="50dp"
    	android:background="@drawable/topnav">
    	<Button
    	    android:id="@+id/btn_back_login"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"    	    
    	    android:background="@drawable/back_login"/>
    	<TextView
        	android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:gravity="center"
        	android:text="登录"
        	android:textColor="#d7d7d7"
        	android:textSize="22dp" />
	</RelativeLayout>
	<LinearLayout    
	    android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_weight="1">
	   <TextView     
	      android:layout_width="match_parent"
    	  android:layout_height="wrap_content"
    	  android:gravity="center"
    	  android:layout_marginTop="36dp"
    	  android:text="无限增值服务应用，欢迎您！"
    	  android:textColor="#cfcfcf"
    	  android:textSize="20dp"/> 
	</LinearLayout>
	<LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical"
    	android:layout_weight="0.4">

	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent" >

	        <EditText
	            android:id="@+id/user_login"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="25dp"
	            android:layout_marginRight="25dp"
	            android:layout_marginTop="39dp"
	            android:background="@drawable/enterbound"
	            android:paddingLeft="15dp"
	            android:drawableLeft="@drawable/personpicture"
	            android:ems="10"
	            android:gravity="center"
	            android:hint="用户名"
	            android:textColor="#ffffff" />

	        <EditText
	            android:id="@+id/pwd_login"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_below="@+id/user_login"
	            android:layout_marginLeft="25dp"
	            android:layout_marginRight="25dp"
	            android:layout_marginTop="16dp"
	            android:background="@drawable/enterbound"
	            android:drawableLeft="@drawable/keypicture"
	            android:paddingLeft="20dp"
	            android:ems="10"
	            android:gravity="center"
	            android:hint="密码"
	            android:inputType="textPassword"
	            android:textColor="#ffffff" />

	        <Button
	            android:id="@+id/btn_enter_login"
	            android:layout_width="match_parent"
	            android:layout_height="46dp"
	            android:layout_below="@+id/pwd_login"
	            android:layout_marginLeft="25dp"
	            android:layout_marginRight="25dp"
	            android:layout_marginTop="29dp"
	            android:background="@drawable/enter_login" />

	        <Button
	            android:id="@+id/btn_forget_login"
	            android:layout_width="wrap_content"
	            android:layout_height="20dp"
	            android:layout_below="@+id/btn_enter_login"
	            android:layout_marginLeft="25dp"
	            android:layout_marginTop="19dp"
	            android:background="@drawable/forget_login" />	     

	    </RelativeLayout>

	</LinearLayout>
</LinearLayout>
